<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="awesome_tshirt.Todo" owl="1">
    <div t-attf-class="mt-2 {{ todo.done ? 'text-muted text-decoration-line-through': ''}}">
        <t t-esc="todo.id" />. <t t-esc="todo.description" />
        <button class="btn btn-primary ml-2 " t-on-click="toggleTask"> <t t-esc="todo.done ? 'Todo': 'Done'" /></button>
    </div>
</t>

</templates>
