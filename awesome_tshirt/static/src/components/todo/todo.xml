<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="awesome_tshirt.Todo" owl="1">
    <div class="o-todo mt-4">
        <input type="checkbox" class="p-2 me-2 form-check-input" t-att-id="props.id" t-on-click="toggleState" t-att-checked="props.done" aria-label="Todo or Done" />
        <label class="form-check-label" t-att-for="props.id" t-att-class="props.done ? 'text-decoration-line-through text-muted' : '' ">
            <t t-esc="props.id"/>. 
            <t t-esc="props.description"/>
        </label>
        <span class="fa fa-remove text-danger o-todo-pointer ms-3" t-on-click="removeTodo" />
    </div>
</t>

</templates>
